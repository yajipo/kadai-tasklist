<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>メッセージ</th>
      </tr>
    </thead>
    <tbody>
      <ul>
       <% @tasks.each do |task| %>
         <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
       <% end %>
      </ul>
    </tbody>
  </table>
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>

<%= link_to '新規メッセージの投稿', new_task_path %>



<h1>メッセージ一覧</h1>

<ul>
  <% @messages.each do |message| %>
    <li><%= link_to message.id, message %> : <%= message.title %> &gt; <%= message.content %></li>
  <% end %>
</ul>
<%= paginate @messages %>

<%= link_to '新規メッセージの投稿', new_message_path %>
